generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"  // или "sqlite", "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  role     String   @default("worker")
  tasks    Task[]
  createdAt DateTime @default(now())
}

model Material {
  id       Int      @id @default(autoincrement())
  name     String
  quantity Float
  unit     String
  price    Float    @default(0)  // ← Добавьте это
  tasks    Task[]
  createdAt DateTime @default(now())
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  status      String    @default("pending")
  deadline    DateTime
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
  materialId  Int?
  material    Material? @relation(fields: [materialId], references: [id])
  createdAt   DateTime  @default(now())
}
